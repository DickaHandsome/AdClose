<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TableLayout
            android:id="@+id/dns_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">
            <TableRow
                android:layout_marginBottom="16dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="DNS Host" />
                <TextView
                    android:id="@+id/dnsHostText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:textIsSelectable="true"
                    android:fontFamily="monospace"
                    android:lineSpacingExtra="4dp"
                    android:gravity="start"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Full Address" />
                <TextView
                    android:id="@+id/fullAddressText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:textIsSelectable="true"
                    android:fontFamily="monospace"
                    android:lineSpacingExtra="4dp"
                    android:gravity="start"/>
            </TableRow>
        </TableLayout>

        <TableLayout
            android:id="@+id/request_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">
            <TableRow
                android:layout_marginBottom="16dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Request Method"/>
                <TextView
                    android:id="@+id/methodText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:textIsSelectable="true"
                    android:fontFamily="monospace"
                    android:lineSpacingExtra="4dp"
                    android:gravity="start" />
            </TableRow>
            <TableRow
                android:layout_marginBottom="16dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Request URL"/>
                <TextView
                    android:id="@+id/urlStringText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:textIsSelectable="true"
                    android:fontFamily="monospace"
                    android:lineSpacingExtra="4dp"
                    android:gravity="start" />
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Request Headers"/>
                <TextView
                    android:id="@+id/requestHeadersText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:textIsSelectable="true"
                    android:fontFamily="monospace"
                    android:lineSpacingExtra="4dp"
                    android:gravity="start" />
            </TableRow>
        </TableLayout>

        <LinearLayout
            android:id="@+id/request_body_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Request Body"
                android:textSize="16sp"
                android:textStyle="bold"
                android:paddingBottom="8dp"/>
            <TextView
                android:id="@+id/requestBodyText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:textIsSelectable="true"
                android:fontFamily="monospace"
                android:lineSpacingExtra="4dp"
                android:gravity="start"
                android:padding="8dp"
                android:background="@android:color/transparent"
                android:breakStrategy="simple" />
        </LinearLayout>

        <TableLayout
            android:id="@+id/response_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">
            <TableRow
                android:layout_marginBottom="16dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Response Code"/>
                <TextView
                    android:id="@+id/responseCodeText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:textIsSelectable="true"
                    android:fontFamily="monospace"
                    android:lineSpacingExtra="4dp"
                    android:gravity="start"/>
            </TableRow>
            <TableRow
                android:layout_marginBottom="16dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Response Message"/>
                <TextView
                    android:id="@+id/responseMessageText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:textIsSelectable="true"
                    android:fontFamily="monospace"
                    android:lineSpacingExtra="4dp"
                    android:gravity="start" />
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Response Headers"/>
                <TextView
                    android:id="@+id/responseHeadersText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:textIsSelectable="true"
                    android:fontFamily="monospace"
                    android:lineSpacingExtra="4dp"
                    android:gravity="start"/>
            </TableRow>
        </TableLayout>

        <LinearLayout
            android:id="@+id/response_body_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <com.google.android.material.materialswitch.MaterialSwitch
                android:id="@+id/collectResponseBodySwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:checked="false"
                android:text="Collect Response Body" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Response Body"
                android:textStyle="bold"
                android:paddingBottom="8dp"/>

            <TextView
                android:id="@+id/responseBodyText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:textIsSelectable="true"
                android:fontFamily="monospace"
                android:lineSpacingExtra="4dp"
                android:gravity="start"
                android:padding="8dp"
                android:background="@android:color/transparent"
                android:breakStrategy="simple" />

            <ImageView
                android:id="@+id/responseBodyImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:contentDescription="Response body as image"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/stack_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">
            <TextView
                android:id="@+id/stackText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textIsSelectable="true"
                android:textSize="12sp"
                android:padding="8dp"
                android:fontFamily="monospace"
                android:lineSpacingExtra="4dp"
                android:gravity="start" />
        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>